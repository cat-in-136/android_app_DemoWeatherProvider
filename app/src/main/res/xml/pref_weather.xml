<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_weather_location">

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_default_city_name"
            android:inputType="textCapWords"
            android:key="default_city_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_default_city_name" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_current">
        <ListPreference android:title="@string/pref_title_weather_status"
            android:key="current_weather_status"
            android:entries="@array/weather_status_entries"
            android:entryValues="@array/weather_status_values" />
        <EditTextPreference
            android:defaultValue="0"
            android:inputType="numberSigned"
            android:key="current_temperature"
            android:title="@string/pref_title_temperature"/>
        <EditTextPreference
            android:defaultValue="0"
            android:inputType="number"
            android:key="current_humidity"
            android:title="@string/pref_title_humidity"/>
        <EditTextPreference
            android:defaultValue="0"
            android:inputType="numberSigned"
            android:key="today_high"
            android:title="@string/pref_title_high"/>
        <EditTextPreference
            android:defaultValue="0"
            android:inputType="numberSigned"
            android:key="today_low"
            android:title="@string/pref_title_low"/>
    </PreferenceCategory>

</PreferenceScreen>
